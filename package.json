{
	"name": "firestore-converter",
	"description": "Share Firestore Data Converters between Client and Server Firebase SDK",
	"version": "0.0.15",
	"homepage": "https://captaincodeman.github.io/firestore-converter/",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/captaincodeman/firestore-converter.git"
	},
	"author": {
		"name": "Simon Green",
		"email": "simon@captaincodeman.com",
		"url": "https://www.captaincodeman.com/"
	},
	"keywords": [
		"firebase",
		"firebase-admin",
		"firestore",
		"data",
		"convert",
		"converter",
		"object model",
		"database model",
		"schema",
		"transform",
		"translate",
		"server",
		"client"
	],
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "tsup && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./firebase": {
			"types": "./dist/firebase/index.d.ts",
			"import": "./dist/firebase/index.js"
		},
		"./firebase.server": {
			"types": "./dist/firebase.server/index.d.ts",
			"import": "./dist/firebase.server/index.js"
		}
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"firebase": "^12.0.0",
		"firebase-admin": "^13.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@types/node": "^22.10.1",
		"firebase": "^11.0.0",
		"firebase-admin": "^13.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"publint": "^0.2.12",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tslib": "^2.8.1",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"uint8array-extras": "^1.4.0",
		"vite": "^6.0.0"
	}
}
